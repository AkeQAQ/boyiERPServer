<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>repository1</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<scope>runtime</scope>
			<outputDirectory>lib/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.properties</include>
				<include>*.yml</include>
				<include>logback.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources/excelDemo</directory>
			<outputDirectory>/excelDemo</outputDirectory>
			<includes>
				<include>*.xlsx</include>
			</includes>
		</fileSet>
		<!--<fileSet>
			<directory>${project.basedir}/src/main/resources/mapper</directory>
			<outputDirectory>/mapper/</outputDirectory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>-->
		<fileSet>
			<directory>${project.basedir}/bin</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>${artifactId}-${version}.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>